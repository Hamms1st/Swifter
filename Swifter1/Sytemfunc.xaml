                                                                        <Setter Property="Cursor" Value="Hand"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Slider.Template>
                            </Slider>

                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Border>
</Page>
