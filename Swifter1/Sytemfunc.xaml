                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Grid>
                                                                    <!-- your original circle -->
                                                                    <Ellipse Fill="SkyBlue" Stroke="DarkBlue" StrokeThickness="2"/>
                                                                    <!-- new TextBlock showing the Slider’s Value -->
                                                                    <TextBlock
                            Text="{Binding Value, 
                                   RelativeSource={RelativeSource AncestorType=Slider}, 
                                   StringFormat=F0}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="13"   FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" Foreground="#121D55" FontWeight="Light"/>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
