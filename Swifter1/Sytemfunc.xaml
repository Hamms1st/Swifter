                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#5D6B98" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Width="350" Margin="10" Orientation="Vertical" >
                        <TextBlock HorizontalAlignment="Center" Text="Control Volume" Margin="1" FontSize="20"   FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" Foreground="#121D55" FontWeight="Light"></TextBlock>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button x:Name="Volume" Content="Set" Foreground="#FFFFFF" FontWeight="ExtraLight" FontSize="17" FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder" Width="90" Margin="5" Height="30" Background="#121D55" CornerRadius="15">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.4"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#545C86" />
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#5D6B98" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Slider Name="Slideme" Margin="10, 0, 0, 0" Width="150" Orientation="Horizontal" HorizontalAlignment="Left" 
Value="50" Minimum="0" Maximum="100" SmallChange="10" IsSnapToTickEnabled="True">
                                <Slider.Template>
                                    <ControlTemplate TargetType="Slider">
                                        <Grid>
                                            <!-- Curved Track -->
                                            <Border Background="Gray" Height="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                CornerRadius="4">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.4"/>
                                                </Border.Effect>

                                            </Border>

                                            <!-- Slider Thumb (Knob) -->
                                            <Track x:Name="PART_Track">
                                                <Track.Thumb>
                                                    <!-- ↑ only this Thumb has changed ↓ -->
                                                    <Thumb Width="25" Height="25" Background="SkyBlue" BorderBrush="DarkBlue" BorderThickness="2">
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Grid>
                                                                    <!-- your original circle -->
                                                                    <Ellipse Fill="SkyBlue" Stroke="DarkBlue" StrokeThickness="2"/>
                                                                    <!-- new TextBlock showing the Slider’s Value -->
                                                                    <TextBlock
                            Text="{Binding Value, 
                                   RelativeSource={RelativeSource AncestorType=Slider}, 
                                   StringFormat=F0}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="13"   FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" Foreground="#121D55" FontWeight="Light"/>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Cursor" Value="Hand"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Slider.Template>
                            </Slider>


                        </StackPanel>
                    </StackPanel>

