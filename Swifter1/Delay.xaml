<Page x:Class="Swifter1.Delay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Swifter1"
      mc:Ignorable="d" 
      d:DesignHeight="432" d:DesignWidth="525"
      Title="Delay">
    <Border Background="DarkGray" CornerRadius="10"    BorderBrush="#CCCCCC" >
        <Grid>
            <StackPanel>
                <TextBlock Text="Add Delay to your Steps" HorizontalAlignment="Center" Margin="5" FontSize="25"  FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" Foreground="#121D55" FontWeight="Light"></TextBlock>
                <TextBlock Text="*Measured in Seconds" HorizontalAlignment="Center" FontSize="14"  FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost" Foreground="#121D55" FontWeight="Light"></TextBlock>

                <Border Background="#7C7C7C" Margin="70" Height="180" CornerRadius="10"    BorderBrush="#CCCCCC" >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <StackPanel Margin="20" HorizontalAlignment="Center" >
                        <Border Margin="10"  VerticalAlignment="Center" Grid.Column="1" CornerRadius="10" BorderThickness="2" BorderBrush="#8A8A8A" Background="DarkGray" Height="35" Width="200">

                            <TextBox  FontFamily="pack://application:,,,/Swifter1;component/Fonts/#Jost"  Foreground="#121D55" Grid.Column="0" Background="Transparent"   BorderThickness="0" FontSize="13" Padding="4"  Text="0.0" TextAlignment="Center"     VerticalContentAlignment="Center" />

                        </Border>
                        <StackPanel Margin="20"  Orientation="Horizontal">
                            <Button  x:Name="Confirm" Content="Confirm"   Foreground="#FFFFFF" FontWeight="ExtraLight" FontSize="17" FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder1" Margin="5" Width="125" Height="40" Background="#121D55" CornerRadius="15">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Direction="90" Opacity="0.4"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter TargetName="ButtonBorder1" Property="Background" Value="#545C86" />
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button  x:Name="Cancel" Content="Cancel"   Foreground="#FFFFFF" FontWeight="ExtraLight" FontSize="17" FontFamily="pack://application:,,,/Swifter1;component/Fonts/Jost-VariableFont_wght.ttf#Jost">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder" Width="125" Margin="5" Height="40" Background="#B5BDD0" CornerRadius="15">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Direction="90" Opacity="0.4"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </StackPanel>

        </Grid>
    </Border>
</Page>
